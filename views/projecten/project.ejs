<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/img/logo_80.png">
    <title>
        <%= short %> - <%= title %>
    </title>
    <link href="/css/styles.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="/css/styless.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/img/logo_80.png" alt="Logo" width="auto" height="45"
                    class="d-inline-block align-text-center">
                <%= name %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex ms-auto">
                    <% links.forEach(link=> { %>
                        <% if (link.name==="Projecten") { %>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="<%= link.url %>">
                                    <%= link.name %>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="<%= link.url %>">
                                        <%= link.name %>
                                    </a>
                                </li>
                                <% } %>
                            <% }) %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4 align-items-center project">
        <div class="row">
            <div class="col text-start">
                <h1 class="display-5"><%= data.title %></h1>
                <div class="mt-2" id="description" url="/projecten/api/<%= project %>/<%= data.longHtml %>"></div>
                <div class="mt-2">
                    <% data.links.forEach(link => { %>
                        <a class="btn btn-primary" href="<%= link.url %>" target="_blank"><%= link.name %></a>
                    <% }) %>
                </div>
            </div>
            <div class="col d-flex flex-column align-items-end" id="project-images">
                <% data.images.forEach(img => { %>
                 <div class="card" style="width: 75%;">
                    <img src="/projecten/api/<%= project %>/<%= img.url %>" id="project-image" class="card-img-top" alt="<%= img.description %>">
                    <% if (img.description && img.description.trim() !== "") { %>
                        <div class="card-body text-start">
                            <p class="card-text"><%= img.description %></p>
                        </div>
                    <% } %>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <footer class="bg-body-tertiary text-center py-3 mt-auto pt-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col text-center">
                    <img src="/img/logo_80.png" alt="Logo" width="auto" height="100">
                </div>
                <div class="col text-center">
                    <h3 class="mb-3">Contact</h3>
                    <p class="mb-1">Julian Verwoerd</p>
                    <p class="mb-1">
                        <a href="&#x6d;&#x61;&#x69;&#x6c;&#x74;&#x6f;&colon;&#x6a;&#x75;&#x6c;&#x69;&#x61;&#x6e;&period;&#x76;&#x65;&#x72;&#x77;&#x6f;&#x65;&#x72;&#x64;&commat;&#x70;&#x61;&#x6e;&#x74;&#x72;&#x6f;&#x6e;&#x69;&#x63;&period;&#x6e;&#x6c;">&#x6a;&#x75;&#x6c;&#x69;&#x61;&#x6e;&period;&#x76;&#x65;&#x72;&#x77;&#x6f;&#x65;&#x72;&#x64;&commat;&#x70;&#x61;&#x6e;&#x74;&#x72;&#x6f;&#x6e;&#x69;&#x63;&period;&#x6e;&#x6c;</a>
                    </p>
                    <p class="mb-3">
                        <a href="&#x74;&#x65;&#x6c;&colon;&plus;&#x33;&#x31;&#x36;&#x32;&#x34;&#x37;&#x39;&#x39;&#x38;&#x37;&#x36;">&#x30;&#x36;&#x2d;&#x32;&#x34;&#x37;&#x39;&#x39;&#x38;&#x37;&#x36;</a>
                    </p>
                    <div class="d-inline-block">
                        <a class="icon-link" href="https://www.linkedin.com/in/julian-v-84a02a356/" target="_blank">
                            <i class="fa-brands fa-linkedin fa-lg"></i>
                        </a>
                        <a class="icon-link" href="https://github.com/jul1xn" target="_blank">
                            <i class="fa-brands fa-github fa-lg"></i>
                        </a>
                    </div>
                </div>
                <div class="col text-center">
                    <h3 class="mb-3">Navigatie</h3>
                    <ul>
                        <% links.forEach(link=> { %>
                            <li>
                                <a href="<%= link.url %>">
                                    <%= link.name %>
                                </a>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <span class="text-muted">
                        &copy; <%= new Date().getFullYear() %>
                            <%= name %>
                    </span>
                </div>
            </div>
        </div>
    </footer>
    <script src="/js/project.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/632e967be3.js" crossorigin="anonymous"></script>
</body>

</html>