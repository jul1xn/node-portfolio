<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
        <%= short %> - <%= title %>
    </title>
    <link href="/css/styles.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="/css/styless.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/img/logo_80.png" alt="Logo" width="auto" height="45"
                    class="d-inline-block align-text-center">
                <%= name %>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex ms-auto">
                    <% links.forEach(link=> { %>
                        <% if (link.name===title) { %>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="<%= link.url %>">
                                    <%= link.name %>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="<%= link.url %>">
                                        <%= link.name %>
                                    </a>
                                </li>
                                <% } %>
                                    <% }) %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4 align-items-center">
        <div class="row">
            <h1 class="text-center">Projecten</h1>
            <div class="my-2 d-flex justify-content-center flex-wrap tech-list">
                <% available_tech.forEach(tech => { %>
                    <% if (filter && filter.toLowerCase() === tech.toLowerCase()) { %>
                        <a href="/projecten?page=<%= current_page %>&filter=<%= tech %>" class="btn btn-sm btn-secondary me-1 mb-1">
                            <%= tech %>
                        </a>
                    <% } else { %>
                        <a href="/projecten?page=<%= current_page %>&filter=<%= tech %>" class="btn btn-sm btn-outline-secondary me-1 mb-1">
                            <%= tech %>
                        </a>
                    <% } %>
                <% }) %>
            </div>
        </div>
        <div class="row mt-2 d-flex justify-content-center">
            <div class="container" id="projecten-container">
                <!-- Projecten zullen hier dynamisch worden geladen -->
            </div>
        </div>
        <div class="row mt-4 d-flex justify-content-center">
            <nav aria-label="...">
                <ul class="pagination justify-content-center" id="pagination">
                </ul>
            </nav>
        </div>
    </div>
    <footer class="bg-body-tertiary text-center py-3 mt-auto pt-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col text-center">
                    <img src="/img/logo_80.png" alt="Logo" width="auto" height="100">
                </div>
                <div class="col text-center">
                    <h3 class="mb-3">Contact</h3>
                    <p class="mb-1">Julian Verwoerd</p>
                    <p class="mb-1">
                        <a href="mailto:julian.verwoerd@pantronic.nl">julian.verwoerd@pantronic.nl</a>
                    </p>
                    <p class="mb-3">
                        <a href="tel:+31624799876">06-24799876</a>
                    </p>
                    <div class="d-inline-block">
                        <a class="icon-link" href="https://www.linkedin.com/in/julian-v-84a02a356/" target="_blank">
                            <i class="fa-brands fa-linkedin fa-lg"></i>
                        </a>
                        <a class="icon-link" href="https://github.com/jul1xn" target="_blank">
                            <i class="fa-brands fa-github fa-lg"></i>
                        </a>
                    </div>
                </div>
                <div class="col text-center">
                    <h3 class="mb-3">Navigatie</h3>
                    <ul>
                        <% links.forEach(link=> { %>
                            <li>
                                <a href="<%= link.url %>">
                                    <%= link.name %>
                                </a>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col">
                    <span class="text-muted">
                        &copy; <%= new Date().getFullYear() %>
                            <%= name %>
                    </span>
                </div>
            </div>
        </div>
    </footer>
    <script src="/js/projecten.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/632e967be3.js" crossorigin="anonymous"></script>
</body>

</html>